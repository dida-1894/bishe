<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="/stylesheets/material.min.css">
  <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
  <title>Document</title>
  <style media="screen">
    h1 {
      margin-top: 80px;
    }

    .content {
      width: 500px;
    }

    .mdl-tabs.mdl-js-tabs {
      margin: 0 auto;
    }
    .mdl-tabs {
      width: 650px;
      margin: 0 auto;
    }
    .mdl-layout__content{
      width: 100%;
    }
    a{
      color: #607d8b;
    }
    .mdl-list__item--three-line .mdl-list__item-primary-content{
      height: auto;
    }
    .mdl-list__item--three-line .mdl-list__item-secondary-content{
      display: inline;
    }
    .mdl-list__item--three-line .mdl-list__item-primary-content{
      height: auto;
    }
    .mdl-list__item--three-line{
      height: auto;
    }
    .mdl-tabs{
      width: 100%;
    }
  </style>
</head>

<body>
  <% include ../layout/header %>

    <main class="mdl-layout__content">
      <h1>users</h1>
      <div class="page-content">

        <div class="mdl-tabs mdl-js-tabs">
          <div class="mdl-tabs__tab-bar">
            <a href="#tab1" class="mdl-tabs__tab">pass</a>
            <a href="#tab2" class="mdl-tabs__tab">wait</a>
          </div>
            <div class="mdl-tabs__panel is-active" id="tab1">
              <ul class=" mdl-list">
                <% for(var i=0;i<data.length;i++){ %>
                  <% if(data[i].status){ %>
                    <li class="mdl-list__item mdl-list__item--three-line">
                      <span class="mdl-list__item-primary-content">
                        <i class="material-icons mdl-list__item-avatar">person</i>
                        <div class="mdl-card">
                          <div class="mdl-card__title">
                            <%= data[i].name%>
                          </div>
                          <div class="mdl-card__supporting-text">
                            <span> <strong>Phone:</strong> </span>
                            <%= data[i].phone%>
                          </div>
                          <div class="mdl-card__supporting-text">
                            <span> <strong>Despretion:</strong> </span>
                            <%= data[i].despretion%>
                          </div>
                          <div class="mdl-card__supporting-text">
                            <span> <strong>Male:</strong> </span>
                            <% if(data[i].male == 1) { %>
                              MAN
                              <% }else{ %>
                              WOMAN
                              <% } %>
                          </div>
                          <div class="mdl-card__supporting-text">
                            <span> <strong>Email:</strong> </span>
                            <%= data[i].email%>
                          </div>
                        </div>
                        <span class="mdl-list__item-secondary-content">
                          <a class="" href="?act=del&id=<%= data[i].id%>"><i class="material-icons">delete</i></a>
                        </span>
                      </span>
                    </li>
                    <% } %>
                  <% } %>
              </ul>
            </div>
              <div class="mdl-tabs__panel" id="tab2">
                <ul class=" mdl-list">
                  <% for(var i=0;i<data.length;i++){ %>
                    <% if(!data[i].status){ %>
                      <li class="mdl-list__item mdl-list__item--three-line">
                        <span class="mdl-list__item-primary-content">
                          <i class="material-icons mdl-list__item-avatar">person</i>
                          <div class="mdl-card">
                            <div class="mdl-card__title">
                              <h4>
                                <%= data[i].name%>
                              </h4>
                            </div>
                            <div class="mdl-card__supporting-text">
                              <span> <strong>Phone:</strong> </span>
                              <%= data[i].phone%>
                            </div>
                            <div class="mdl-card__supporting-text">
                              <span><strong>Despretion:</strong></span>
                              <%= data[i].despretion%>
                            </div>
                            <div class="mdl-card__supporting-text">
                              <span> <strong>Male:</strong> </span>
                              <% if(data[i].male == 1) { %>
                                MAN
                                <% }else{ %>
                                WOMAN
                                <% } %>
                            </div>
                            <div class="mdl-card__supporting-text">
                              <span> <strong>Email:</strong> </span>
                              <%= data[i].email%>
                            </div>
                          </div>
                          <div class="mdl-card__supporting-text">
                            <span style="float:right" class="mdl-list__item-secondary-content">
                              <a class="" href="?act=pass&id=<%= data[i].id%>"><i class="material-icons">check_circle</i></a>
                            </span>
                            <span style="float: left" class="mdl-list__item-secondary-content">
                              <a class="" href="?act=del&id=<%= data[i].id%>"><i class="material-icons">delete</i></a>
                            </span>
                          </div>
                        </span>
                      </li>
                      <% } %>
                    <% } %>
                </ul>

              </div>

        </div>
      </div>
    </main>
    <% include ../layout/footer %>
</body>
<script src="/javascripts/material.min.js" charset="utf-8"></script>

</html>

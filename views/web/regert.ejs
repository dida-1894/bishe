<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="/stylesheets/material.min.css">
  <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
  <script src="/javascripts/jquery.min.js" charset="utf-8"></script>
  <title>Document</title>
  <style media="screen">
    main{
      width: 100%;
      height: 100%;
    }
    form{
      width: 70%;
      height: 100%;
      margin: 0 auto;
      margin-top: 30px;
    }
    .mdl-card{
      width: 100%;
      text-align: center;
    }
    .mdl-textfield .mdl-button{
      right: 0px;
    }
  </style>
</head>
<body>
  <main class="mdl-layout__content">
    <div class="page-content">
      <form action="/regert" method="post">
        <div class="mdl-card">
          <div class="mdl-card__title">
            <h1>Regert</h1>
          </div>
          <div class="mdl-card__supporting-text">
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
              <input class="mdl-textfield__input" name="name" type="text" id="username">
              <label class="mdl-textfield__label" for="sample3">姓名</label>
            </div>
          </div>
          <div class="mdl-card__supporting-text">
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
              <input class="mdl-textfield__input" name="phone" type="text" id="phone">
              <label class="mdl-textfield__label" for="sample3">手机号码</label>
            </div>
          </div>
          <div class="mdl-card__supporting-text">
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
              <textarea class="mdl-textfield__input" name="despretion" type="text" id="despretion"></textarea>
              <label class="mdl-textfield__label" for="sample3">申请描述</label>
            </div>
          </div>
          <div class="mdl-card__supporting-text">
            <label class="mdl-radio mdl-js-radio mdl-js-ripple-effect" for="flash1">
              <input class="mdl-radio__button" id="flash1" name="male" type="radio"
               value="1">
              <span class="mdl-radio__label">MAN</span>
            </label>
            <label class="mdl-radio mdl-js-radio mdl-js-ripple-effect" for="flash2">
              <input class="mdl-radio__button" id="flash2" name="male" type="radio" value="0">
              <span class="mdl-radio__label">WOMAN</span>
            </label>
          </div>
          <div class="mdl-card__supporting-text">
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
              <input class="mdl-textfield__input" name="password" type="password" id="password">
              <label class="mdl-textfield__label" for="sample3">password</label>
            </div>
          </div>
          <div class="mdl-card__actions">
            <button type="submit" class="mdl-button mdl-js-button mdl-button--raised">提交</button>
          </div>
        </div>
      </form>
    </div>
  </main>
</body>
<script src="/javascripts/material.min.js" charset="utf-8"></script>
<script type="text/javascript">
$(document).ready(function(){
  $.ajaxSetup({
    headers: {
      'X-CSRF-TOKEN': $('meta[name="csrf-token"]').attr('content')
    }
  });
});
  $(function(){
    $('.btn').click(function(){
      var phone=$("#phone").val();
      var reg = /^(1){1}(3|5|7|8){1}[0-9]{9}/;
      if (reg.test(phone)) {
        $.ajax({
          type: 'post',
          url: '/regert',
          data:{
            phone:phone
          }
        });
      } else {
        alert('手机输入有误');
      }
    })
  });
</script>
</html>
